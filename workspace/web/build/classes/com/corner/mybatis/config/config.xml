<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <typeAliases>
        <typeAlias alias="memberVO" type="com.corner.camp.member.vo.MemberVO"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property value="oracle.jdbc.OracleDriver" name="driver"/>
                <property value="jdbc:oracle:thin:@localhost:1600:XE" name="url"/>
                <property value="corner" name="username"/>
                <property value="0008" name="password"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="com/corner/mybatis/sql/member.xml"/>
    </mappers>
</configuration>